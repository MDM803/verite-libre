---
layout: base.njk
---
<style>
    .article-page-header {
        background-color: var(--color-primary);
        padding: 3rem 0;
        color: white;
        text-align: center;
    }

    .article-page-header .category-tag {
        display: inline-block;
        background-color: var(--color-secondary);
        color: white;
        padding: 0.35rem 1rem;
        border-radius: 3px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
    }

    .article-page-header h1 {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        max-width: 800px;
        margin: 0 auto 1rem;
        line-height: 1.25;
    }

    .article-meta-bar {
        display: flex;
        justify-content: center;
        gap: 2rem;
        font-size: 0.9rem;
        opacity: 0.85;
    }

    .article-featured-image {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
    }

    .article-body-wrapper {
        padding: 4rem 0;
        background-color: var(--color-bg-body);
    }

    .article-body {
        max-width: 750px;
        margin: 0 auto;
        font-family: 'Merriweather', serif;
        font-size: 1.1rem;
        line-height: 1.9;
        color: #444;
    }

    .article-body p {
        margin-bottom: 1.75rem;
    }

    .article-body h2 {
        font-family: 'Inter', sans-serif;
        color: var(--color-primary);
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .article-body blockquote {
        border-left: 4px solid var(--color-primary);
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        color: #555;
    }

    .author-box {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        background-color: white;
        padding: 2rem;
        border-radius: 8px;
        margin-top: 3rem;
        border: 1px solid var(--color-border);
    }

    .author-box img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 3px solid var(--color-primary);
    }

    .author-box-info h4 {
        color: var(--color-primary);
        margin-bottom: 0.25rem;
    }

    .author-box-info p {
        font-size: 0.9rem;
        color: var(--color-text-light);
        margin: 0;
    }
</style>

<!-- ARTICLE HEADER -->
<header class="article-page-header">
    <div class="container">
        <span class="category-tag">{{ topic }}</span>
        <h1>{{ title }}</h1>
        <div class="article-meta-bar">
            <span>By {{ author }}</span>
            <span>{{ date | dateFormat }}</span>
        </div>
    </div>
</header>

{% if thumbnail %}
<img src="{{ thumbnail }}" alt="{{ title }}" class="article-featured-image">
{% endif %}

<!-- ARTICLE BODY -->
<div class="article-body-wrapper">
    <div class="container">
        <article class="article-body">
            {{ content | safe }}

            <div class="author-box">
                <img src="https://ui-avatars.com/api/?name={{ author | urlencode }}&background=7B1F1F&color=fff&size=200" 
                     alt="{{ author }}">
                <div class="author-box-info">
                    <h4>{{ author }}</h4>
                    <p>Contributing author at Vérité Research.</p>
                </div>
            </div>
        </article>
    </div>
</div>
